<div class="activite-show-container">

  <div class="activite-show-title">
    <h1 class="activite-show-shadow-title"><%= @activite.title %></h1>
    <h1 class="activite-show-block-title"><%= @activite.title %></h1>
  </div>

  <div class="activite-show-pic-text-container">

    <div class="activite-show-pic-container">
      <% if @activite.photo.attached? %>
        <%= cl_image_tag @activite.photo.key %>
      <% end %>
    </div>

    <div class="activite-show-text-container">
      <div class="activite-show-text-container-content">
        <div class="activite-show-text-content">
          <!-- <p class="activite-show-text"><%= @activite.description %></p> -->

          <div class="show-div-text activite-show-div-adresse">
            <p class="show-p-title">Adresse</p>
            <div class="show-div-ligne"><p class="show-jour"><i class="fa-solid fa-location-dot" style="color: #FFFFFFB5;"></i></p><p>Rue de la poste 62155 MERLIMONT</p></div>
            <div class="show-div-ligne"><p class="show-jour"><i class="fa-solid fa-phone" style="color: #FFFFFFB5;"></i></p><p>03.21.84.13.94</p></div>
          </div>


          <div class="show-div-text activite-show-div-prix">
            <p class="show-p-title">Prix</p>
            <div class="show-div-ligne"><p class="show-jour">Adultes :</p><p>5 euros</p></div>
            <div class="show-div-ligne"><p class="show-jour">Enfants -10 ans :</p><p>4 euros</p></div>
          </div>



          <div class="show-div-text activite-show-div-horaires">
            <p class="show-p-title">Horaires</p>
            <div class="show-div-horaires">
              <div class="show-div-ligne"><p class="show-jour">Lundi</p>	<p>10:00–12:00 - 14:00–20:00</p></div>
              <div class="show-div-ligne"><p class="show-jour">Mardi</p>	<p>10:00–12:00 - 14:00–20:00</p></div>
              <div class="show-div-ligne"><p class="show-jour">Mercredi</p>	<p>10:00–12:00 - 14:00–20:00</p></div>
              <div class="show-div-ligne"><p class="show-jour">Jeudi</p>	<p>10:00–12:00 - 14:00–20:00</p></div>
              <div class="show-div-ligne"><p class="show-jour">Vendredi</p>	<p>10:00–12:00 - 14:00–20:00</p></div>
              <div class="show-div-ligne"><p class="show-jour">Samedi</p>	<p>10:00–12:00 - 14:00–20:00</p></div>
              <div class="show-div-ligne"><p class="show-jour">Dimanche</p>	<p>10:00–12:00 - 14:00–20:00</p></div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

</div>
