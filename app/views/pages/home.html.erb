<!-- div presentation -->

<div class="home-presentation-div">

  <div class="home-traces">
    <%= image_tag('home_trace.svg') %>
  </div>

  <div class="home-presentation-title-and-title-shadow">

    <div class="home-presentation-title-shadow">
      <h1>Merlimont</h1>
    </div>

    <div class="home-presentation-title">
      <h1>Merlimont</h1>
    </div>

  </div>


  <div class="home-presentation-text-picture">

    <div class="home-presentation-text">

    </div>
    <div class="home-presentation-photo">

    </div>

  </div>

  <script>

    const elementTraceHome = document.querySelector('.home-traces');
    const hauteurDesTracesHome = elementTraceHome.offsetHeight; // hauteur des traces

    const elementPresentationTitle = document.querySelector('.home-presentation-title');
    elementPresentationTitle.style.paddingTop = hauteurDesTracesHome + 'px';

    const homePresentationTitleShadow = document.querySelector('.home-presentation-title-shadow');
    homePresentationTitleShadow.style.paddingTop = hauteurDesTracesHome - 50 + 'px';



  </script>
</div>

