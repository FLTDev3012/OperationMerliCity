<script>
  window.addEventListener('DOMContentLoaded', (event) => {
    const leLienGal = document.querySelector('.gal');
    const leLienWeb = document.querySelector('.web');
    const leLienFaune = document.querySelector('.faune');
    const leLienFois = document.querySelector('.fois');
    const leLienAbout = document.querySelector('.about');

    const largeurDeGal = leLienGal.offsetWidth;
    const cibleNewGal = document.querySelector('.galn');
    cibleNewGal.setAttribute('width', `${largeurDeGal}px`);

    const largeurDeWeb = leLienWeb.offsetWidth;
    const cibleNewWeb = document.querySelector('.webn');
    cibleNewWeb.setAttribute('width', `${largeurDeWeb}px`);

    const largeurDeFaune = leLienFaune.offsetWidth;
    const cibleNewFaune = document.querySelector('.faunen');
    cibleNewFaune.setAttribute('width', `${largeurDeFaune}px`);

    const largeurDeFois = leLienFois.offsetWidth;
    const cibleNewFois = document.querySelector('.foisn');
    cibleNewFois.setAttribute('width', `${largeurDeFois}px`);

    const largeurDeAbout = leLienAbout.offsetWidth;
    const cibleNewAbout = document.querySelector('.aboutn');
    cibleNewAbout.setAttribute('width', `${largeurDeAbout}px`);

    const hauteurPourTous = leLienGal.offsetHeight;
    const lesSvg = document.querySelectorAll('.svg-pfff');
    lesSvg.forEach((leSvg) => {
      leSvg.setAttribute('height', `${hauteurPourTous}px`);
    });
  });
</script>

